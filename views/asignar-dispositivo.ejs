<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignar Dispositivo a Zona</title>
</head>

<body>
    <h1>Asignar Dispositivo a Zona</h1>
    <form action="/asignar-dispositivo" method="POST">
        <label for="dispositivo">Dispositivo:</label>
        <select name="dispositivo_id" id="dispositivo">
            <% dispositivos.forEach(dispositivo=> { %>
                <option value="<%= dispositivo.id_dispositivo %>">
                    <%= dispositivo.imei %> - <%= dispositivo.vehiculo %>
                </option>
                <% }) %>
        </select>
        <br>
        <label for="zona">Zona:</label>
        <select name="zona_id" id="zona">
            <% zonas.forEach(zona=> { %>
                <option value="<%= zona.id %>">
                    <%= zona.nombre %>
                </option>
                <% }) %>
        </select>
        <br>
        <button type="submit">Asignar</button>
    </form>
</body>

</html>